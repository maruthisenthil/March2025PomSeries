<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="4"
	thread-count="1" parallel="tests" >

	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener class-name="com.qa.opencart.listeners.TestAllureListeners" />
		<listener class-name="com.qa.opencart.listeners.AnnotationTransformer" />
		
	</listeners>
	<test name="Login Page Test_Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencarts.tests.LoginPageTest" />
		</classes>
	</test>
	
 	<test name="Login Page Test_Firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencarts.tests.LoginPageTest" />
		</classes>
	</test>
	
		<test name="Login Page Test_Edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencarts.tests.LoginPageTest" />
		</classes>
	</test>
	
